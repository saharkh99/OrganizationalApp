<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:fontFamily">@fonts/iransans.ttf</item>

    </style>
    <style name="editStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <!-- Style attributes -->
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="endIconTint">@color/unActive</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:colorActivatedHighlight">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/unActive</item>
        <item name="colorControlNormal">#1F1C1C</item>
        <item name="errorTextAppearance">@color/error_color</item>
        <!-- Theme attributes -->

    </style>
    <style name="stroke" >
        <item name="android:strokeWidth" tools:targetApi="lollipop">9.0</item>
        <item name="android:strokeColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
    </style>
    <style name="strokegreen" >
        <item name="android:strokeWidth" tools:targetApi="lollipop">9.0</item>
        <item name="android:strokeColor" tools:targetApi="lollipop">@color/colorPrimary</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="editTextBackground">@layout/activity_preview</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
   <style name="hint_style" parent="TextAppearance.AppCompat">
       <item name="android:layout_marginRight">2dp</item>
       <item name="android:layout_marginLeft">5dp</item>
   </style>
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>
</resources>
